<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProgressBar" />

    <style name="ProgressBar.Custom" />

    <style name="ProgressBar.Custom.Download">
        <item name="android:interpolator">@android:interpolator/anticipate_overshoot</item>
        <item name="android:indeterminateDuration">@integer/custom_progressbar_animation_duration</item>
        <item name="android:indeterminateDrawable">@drawable/custom_progress_circle</item>
        <item name="android:layout_margin">@dimen/default_gap</item>
    </style>

    <!-- FAB styles -->

    <style name="MenuButtonsStyle">
        <item name="fab_size">mini</item>
        <item name="fab_showAnimation">@anim/jump_from_down</item>
        <item name="fab_hideAnimation">@anim/jump_to_down</item>
    </style>

</resources>
